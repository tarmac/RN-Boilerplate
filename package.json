{
  "name": "rnboilerts",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint 'app/**/*.{ts,tsx}'",
    "renameApp": "node_modules/.bin/react-native-rename",
    "test": "jest",
    "android": "node node_modules/.bin/react-native run-android",
    "ios": "node node_modules/.bin/react-native run-ios",
    "storybook": "node ./node_modules/.bin/start-storybook -p 7007",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android-dev": "ENVFILE=./environments/.env.dev react-native run-android",
    "android-prod": "ENVFILE=./environments/.env.prod react-native run-android",
    "android-storybook": "ENVFILE=./environments/.env.storybook react-native run-android",
    "build-android-prod": "export ENVFILE=./environments/.env.prod && cd android && ./gradlew assembleRelease && cd .."
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.5.0",
    "react": "16.8.6",
    "react-native": "0.59.9",
    "react-native-config": "^0.11.7",
    "react-native-gesture-handler": "^1.3.0",
    "react-navigation": "^3.11.0",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/preset-typescript": "^1.1.0",
    "@storybook/react-native": "^5.1.9",
    "@storybook/react-native-server": "^5.1.9",
    "@storybook/theming": "^5.1.9",
    "@types/enzyme": "^3.9.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.22",
    "@types/react-native": "^0.57.64",
    "@types/react-redux": "^7.1.0",
    "@types/react-test-renderer": "^16.8.2",
    "@types/redux-logger": "^3.0.7",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^2.6.0",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.54.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.8.6",
    "react-native-rename": "^2.4.1",
    "react-native-testing-library": "^1.9.1",
    "react-test-renderer": "16.8.6",
    "redux-devtools": "^3.5.0",
    "redux-ducks-ts": "^1.0.3",
    "redux-logger": "^3.0.6",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "setupFiles": [
      "<rootDir>/config/jest.setup.js"
    ]
  }
}
