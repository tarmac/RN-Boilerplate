{
  "strict": {
    "text-h1-font-size": 24,
    "text-h1-font-weight": "600",
    "text-h1-line-height": 48,
    "text-camera-text-font-size": 25,
    "text-camera-text-font-weight": "600",
    "text-field-text-font-size": 24,
    "text-field-text-font-weight": "600",
    "text-placeholder-font-size": 24,
    "text-placeholder-font-weight": "400",
    "text-placeholder-font-height": 30,
    "text-button-text-font-size": 22,
    "text-button-text-font-weight": "700",
    "text-info-text-font-size": 17,
    "text-info-text-font-weight": "500",
    "text-body-font-size": 16,
    "text-body-font-weight": "400",
    "text-body-line-height": 24
  },
  "components": {
    "Button": {
      "meta": {
        "scope": "mobile",
        "variantGroups": {
          "status": {
            "skip": {
              "default": false
            },
            "back": {
              "default": false
            }
          },
          "size": {
            "circle": {
              "default": false
            }
          }
        }
      },
      "appearances": {
        "filled": {
          "mapping": {
            "borderRadius": 50
          },
          "variantGroups": {
            "status": {
              "skip": {
                "borderColor": "color-sentry-nice-blue",
                "backgroundColor": "color-sentry-nice-blue",
                "textColor": "color-sentry-dark-sky-blue",
                "state": {
                  "active": {
                    "borderColor": "color-sentry-azure",
                    "backgroundColor": "color-sentry-azure",
                    "textColor": "text-control-color"
                  }
                }
              },
              "back": {
                "borderColor": "transparent",
                "backgroundColor": "transparent",
                "textColor": "color-sentry-light-green",
                "state": {
                  "active": {
                    "borderColor": "color-sentry-light-blue",
                    "backgroundColor": "color-sentry-light-blue",
                    "textColor": "color-sentry-light-green"
                  }
                }
              }
            },
            "size": {
              "circle": {
                "minHeight": 43,
                "minWidth": 43,
                "paddingHorizontal": 0,
                "paddingVertical": 8,
                "textFontSize": 8,
                "textLineHeight": 12,
                "textFontWeight": "bold",
                "textMarginHorizontal": 8,
                "iconWidth": 12,
                "iconHeight": 12,
                "iconMarginHorizontal": 8
              },
              "medium": {
                "minWidth": 200,
                "minHeight": 60,
                "textFontSize": 22,
                "textLineHeight": 22
              }
            }
          }
        },
        "ghost": {
          "variantGroups": {
            "status": {
              "primary": {
                "textColor": "color-sentry-robin-seg"
              }
            }
          }
        }
      }
    },
    "Input": {
      "meta": {
        "scope": "mobile"
      },
      "appearances": {
        "default": {
          "mapping": {
            "borderRadius": 5,
            "borderColor": "color-sentry-white-008",
            "backgroundColor": "color-sentry-white-008",
            "textColor": "color-sentry-white",
            "placeholderColor": "color-sentry-light-blue",
            "captionFontSize": "text-placeholder-font-size",
            "state": {
              "focused": {
                "textColor": "color-sentry-white",
                "borderColor": "color-sentry-white-008"
              }
            }
          },
          "variantGroups": {
            "size": {
              "small": {
                "minHeight": 10,
                "textFontSize": 16,
                "paddingVertical": 0,
                "textLineHeight": "text-placeholder-font-height",
                "textFontWeight": "text-placeholder-font-weight"
              },
              "medium": {
                "minHeight": 70,
                "textFontSize": "text-placeholder-font-size",
                "textLineHeight": "text-placeholder-font-height",
                "textFontWeight": "text-placeholder-font-weight"
              }
            }
          }
        }
      }
    },
    "Text": {
      "meta": {
        "scope": "mobile",
        "appearances": {
          "default": {
            "default": true
          },
          "hint": {
            "default": false
          }
        },
        "variantGroups": {
          "category": {
            "h1": {
              "default": false
            },
            "body": {
              "default": true
            }
          }
        }
      },
      "appearances": {
        "default": {
          "mapping": {
            "color": "color-text-default"
          },
          "variantGroups": {
            "category": {
              "body": {
                "fontSize": "text-body-font-size",
                "lineHeight": "text-body-line-height",
                "fontWeight": "text-body-font-weight"
              },
              "h1": {
                "fontSize": "text-h1-font-size",
                "lineHeight": "text-h1-line-height",
                "fontWeight": "text-h1-font-weight"
              }
            },
            "status": {
              "primary": {
                "color": "color-text-default"
              }
            }
          }
        },
        "hint": {
          "mapping": {
            "color": "color-text-hint"
          }
        }
      }
    }
  }
}
